{
  "name": "backend",
  "version": "1.0.0-beta.1",
  "main": "dist/server.js",
  "scripts": {
    "build": "npx tsc",
    "codegen:apollo": "graphql-codegen --config codegen.apollo.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint '*/**/*.{js,ts}'",
    "lint-fix": "eslint '*/**/*.{js,ts}' --fix",
    "migrate:create": "npx mikro-orm migration:create --config src/mikro-orm.sqlite.ts",
    "migrate:up": "npx mikro-orm migration:up --config src/mikro-orm.sqlite.ts",
    "prettier": "prettier src/**/* -l",
    "prettier:fix": "npm run prettier --write",
    "seed:create": "npx mikro-orm seeder:create --config src/mikro-orm.sqlite.ts",
    "seed:run": "npx mikro-orm seeder:run --config src/mikro-orm.sqlite.ts",
    "start": "node dist/server.js",
    "test": "jest"
  },
  "dependencies": {
    "@apollo/client": "^3.11.1",
    "@apollo/federation": "^0.38.1",
    "@apollo/server": "^4.11.0",
    "@apollo/subgraph": "^2.8.4",
    "@faker-js/faker": "^8.4.1",
    "@graphql-tools/utils": "^10.5.4",
    "@mikro-orm/core": "^6.3.13",
    "@mikro-orm/migrations": "^6.3.13",
    "@mikro-orm/postgresql": "^6.3.13",
    "@mikro-orm/seeder": "^6.3.13",
    "@mikro-orm/sqlite": "^6.3.13",
    "@types/sqlite3": "^3.1.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "apollo-server-express": "^3.13.0",
    "async-mutex": "^0.5.0",
    "cors": "^2.8.5",
    "cross-fetch": "^4.0.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "express-http-proxy": "^2.0.0",
    "get-port": "^7.1.0",
    "global-agent": "^3.0.0",
    "graphql": "^16.9.0",
    "http-proxy-middleware": "^3.0.0",
    "joi": "^17.13.3",
    "pg": "^8.12.0",
    "portfinder": "^1.0.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@mikro-orm/cli": "^6.3.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/global-agent": "^2.1.3",
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4.17.7",
    "@types/node": "^14.14.37",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^1.1.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": "20",
    "npm": "10"
  }
}
